<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RevivalPizza</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RevivalPizza.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <video autoplay muted loop id="video">
        <source src="videos/video.mp4" type="video/mp4">
        Your browser does not support HTML5 video.
    </video>
    <header>
        <nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-column flex-grow-1">
                        <li class="nav-item" >
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/images/logoTransparent.png" class="logo" /></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="About" asp-action="AboutView"><span class="material-symbols-outlined text-white">info</span>&nbsp; <b>Pizza Saint</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Menu" asp-action="MenuView"><span class="material-symbols-outlined text-white">menu_book</span>&nbsp; <b>Menu</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Orders" asp-action="OrdersView"><span class="material-symbols-outlined text-white">local_pizza </span>&nbsp; <b>Order Online</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Registers" asp-action="RegistersView"><span class="material-symbols-outlined text-white">person_add</span>&nbsp; <b>Register</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="" asp-action=""><span class="material-symbols-outlined text-white">login</span>&nbsp; <b>Login</b></a>
                        </li>
                        @* <li>
                            <div class="d-flex flex-row-reverse float-end ">
                                <img src="/images/Facebook.png" class="logo" />
                                <img src="/images/Instagram.png" class="logo" />
                            </div>
                        </li> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
